<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="mainWindow.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Welcome to Library Management System " GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.halignment="CENTER" GridPane.columnSpan="2"></Label>

    <Label text="Log in: " GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
    <TextField fx:id="txtLogin" GridPane.columnIndex="1" GridPane.rowIndex="1"></TextField>

    <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
    <TextField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"></TextField>

    <Button onAction="#onLogin" fx:id="btnLogin"
            text="Log in" GridPane.columnIndex="0" GridPane.rowIndex="3"
            GridPane.halignment="CENTER" GridPane.columnSpan="3"></Button>



</GridPane>