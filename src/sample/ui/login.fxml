    <Label text="Password: " textFill="WHITE" GridPane.rowIndex="6" />

    <Button fx:id="btnLogin" onAction="#onLogin" style="-fx-background-color: #b0e0e6;" text="Log in" textFill="ROYALBLUE" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="7">
        <effect>
            <DropShadow />
        </effect></Button>
    <ImageView fitHeight="51.0" fitWidth="366.0" pickOnBounds="true" GridPane.columnSpan="2" GridPane.rowSpan="2">
        <image>
            <Image url="@logoiut.png" />
        </image>
        <effect>
            <DropShadow />
        </effect>
    </ImageView>
    <PasswordField fx:id="txtPass" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <columnConstraints>
        <ColumnConstraints />
